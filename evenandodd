def slove(array, deep=0):
    '''para:
        array: list input.
    return: list.
    !!!Do not set value for deep!!!'''
    if len(array) > 2:
        if deep > 0:
            for i in xrange(0, len(array), 2):
                array[i], array[i + 1] = array[i + 1], array[i]
        left = array[0]
        right = array[-1]
        array = array[1:-1]
        array = slove(array, deep + 1)
        array.insert(0, left)
        array.append(right)
        return array
    else:
        array[0], array[-1] = array[-1], array[0]
        return array


